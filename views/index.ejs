<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %> <% if (currentUser) { %>
    <h1>Welcome back <%= currentUser.username %></h1>
    <p>Become a member to see who posted and when.</p>
    <a href="/create-message">Create a post</a>
    <% } else { %>
    <h1>Messages</h1>
    <p>Log in to post a message.</p>
    <% } %>

    <section>
      <% messages.forEach((message) => { %>
      <h2><%= message.title %></h2>
      <p><%= message.description %></p>
      <div>
        <% if (currentUser && (currentUser.isMember || currentUser.isAdmin)) {
        %>
        <p>(<%= message.author %>)</p>
        <% } else { %>
        <p>(author)</p>
        <% } %> <% if (currentUser && (currentUser.isMember ||
        currentUser.isAdmin)) { %>
        <p>(<%= message.date %>)</p>
        <% } else { %>
        <p>(timestamp)</p>
        <% } %>
      </div>
      <% }); %>
    </section>
  </body>
</html>
